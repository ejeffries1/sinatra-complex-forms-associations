<h1>Create a new Pet</h1>


<form method="POST" action="/pets">

    <label>Create new pet: </label>
    <input type="text" name="pet[name]" id="pet_name">
    <br>

    <h3>Existing Owners:</h3>
    <%Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><%= owner.name%>
    <%end%>

    <h3>or, Create new owner: </h3>
    <input type="text" name="owner[name]" id="owner_name">
    <br>
    <input type="submit" value="Create Pet">
</form>
